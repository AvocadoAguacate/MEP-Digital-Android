<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/NameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:text="Nombre" />

    <TextView
        android:id="@+id/phoneTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="Telefono" />

    <TextView
        android:id="@+id/EmailtextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="Correo" />

    <Spinner
        android:id="@+id/qualificationSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:prompt="@string/select_calification"
        android:spinnerMode="dialog"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/teacherChatTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat con el profesor" />

    <ListView
        android:id="@+id/chatListView"
        android:layout_width="match_parent"
        android:layout_height="192dp" >

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/sendMessageTextView"
            android:layout_width="346dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Escribe un mensaje" />

        <ImageButton
            android:id="@+id/sendMessageButton"
            android:layout_width="62dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/ic_launcher_foreground" />
    </LinearLayout>

    <Button
        android:id="@+id/readyButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Listo"
        android:onClick="ChangeView"/>/>

</LinearLayout>